<div class="as-bar">
  <%= link_to({ controller: 'produce_plans' }, class: 'px-4') do %>
    <%= svg_tag 'angle-left', kind: 'regular' %>
  <% end %>
  <div class="bar-title flex-direction-column">
    <div>
      <span class="text-weight-semibold"><%= params[:produce_on] %></span>
      <span><%= params[:produce_on].to_date.to_fs(:week) if params[:produce_on].present? %></span>
    </div>
    <div>
      <span class="text-weight-semibold"><%= @scene&.title %></span>
    </div>
  </div>
  <i class="px-5"></i>
</div>
