<div id="modal" data-controller="modal" class="modal is-mobile is-mobile-bottom is-active">
  <div data-action="click->modal#close" class="modal-background has-animate-fade-in"></div>
  <div class="modal-card has-animate-slide-up">
    <header class="modal-card-head">
      <button type="button" data-action="modal#close" class="delete"></button>
      <p class="modal-card-title"><%= @production.product.name %></p>
      <span style="width: 1.25rem"></span>
    </header>
    <div id="production_modal_body" class="modal-card-body is-narrow">
      <%= yield %>
    </div>
    <% if @production.taxon.customizable %>
      <%= render partial: 'modal_foot_component', locals: { item_con: "trade/#{params[:namespace].presence || 'my'}/items" } %>
    <% else %>
      <%= render partial: 'modal_foot_brothers', locals: { item_con: "trade/#{params[:namespace].presence || 'my'}/items" } %>
    <% end %>
  </div>
</div>
