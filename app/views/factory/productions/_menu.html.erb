<div class="menu is-sticky as-side flex-shrink-0" style="margin-left: -0.75rem">
  <div class="menu-list flex flex-direction-column">
    <% @taxons.each do |taxon| %>
      <%= link_to({ taxon_id: taxon.id == params[:taxon_id] ? nil : taxon.id, **params.permit(:station_id, :desk_id, :dispatch) }, data: { turbo_action: 'replace' }, class: active_helper(taxon_id: taxon.id, item: 'menu-item', active: 'menu-item is-active')) do %>
        <% if taxon.logo.attached? %>
          <figure class="image is-24x24 display-inline-block">
            <%= image_tag taxon.logo.variant(resize_to_limit: [24, 24]), loading: 'lazy' %>
          </figure>
        <% end %>
        <p class="size-7 text-weight-medium" style="width: 4em"><%= taxon.name %></p>
      <% end %>
    <% end %>
    <div class="background-white flex-grow-1"></div>
  </div>
</div>
