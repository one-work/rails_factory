<%= render partial: 'filter_bar', locals: { name: 'word-like' } %>

<div
  data-controller="page"
  data-page-url-value="<%= url_for(action: 'swift') %>"
  class="flex-grow-1 overflow-x-hidden flex flex-direction-column"
>
  <div class="fixed-grid has-2-cols">
    <div class="grid">
      <%= render partial: 'production', collection: @productions, as: :model %>
    </div>
  </div>
  <% if @productions.blank? %>
    <%= render 'page_blank' %>
  <% elsif @productions.total_pages <= @productions.current_page %>
    <%= render 'page_no_more' %>
  <% elsif @productions.total_pages > @productions.current_page %>
    <%= render partial: 'page_loading', locals: { all: @productions } %>
  <% end %>
</div>
