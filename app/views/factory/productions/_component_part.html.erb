<label class="button overflow-x-hidden <%= @production.part_ids.include?(component_part.part_id) ? 'is-success' : 'is-light' %>" for="part_<%= component_part.part_id %>"<%= component.disabled?(@production.part_ids, component_part.part_id) ? ' disabled' : '' %>>
  <span class="truncate"><%= component_part.part.title %></span>
  <span class="flex-shrink-0">
    <% if component_part.part.price.to_d > 0 %>
      <span class="ml-1 text-danger"><%= component_part.part.price.to_money.format.html_safe %></span>
    <% end %>
    <% if component.cancelable?(@production.part_ids, component_part.part_id) %>
      <%= svg_tag 'xmark', class: 'icon is-small ml-1' %>
    <% end %>
  </span>
  <%= hidden_field_tag 'production_parts_attributes[][component_id]', component_part.component_id, form: 'edit_custom', id: nil %>
  <% if component.only_one? %>
    <%= radio_button_tag 'production_parts_attributes[][part_id]', component_part.part_id, @production.part_ids.include?(component_part.part_id), data: { action: 'custom#toggle', part_taxon_id: component.part_taxon_id }, class: 'display-none', id: "part_#{component_part.part_id}", form: 'edit_custom' %>
  <% else %>
    <%= hidden_field_tag 'production_parts_attributes[][part_id]', component_part.part_id, form: 'edit_custom', data: { part_taxon_id: component_part.part.taxon_id }, id: nil if @production.part_ids.include?(component_part.part_id) && component.disabled?(@production.part_ids, component_part.part_id) %>
    <%= check_box_tag 'production_parts_attributes[][part_id]', component_part.part_id, @production.part_ids.include?(component_part.part_id), disabled: component.disabled?(@production.part_ids, component_part.part_id), data: { action: 'custom#toggle', part_taxon_id: component.part_taxon_id }, class: 'display-none', id: "part_#{component_part.part_id}", form: 'edit_custom' %>
  <% end %>
</label>
