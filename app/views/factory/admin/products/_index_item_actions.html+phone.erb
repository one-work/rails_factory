<div id="tr_<%= model.id %>" class="media">
  <% if model.logo.attached? %>
    <div class="media-left">
      <%= image_tag model.logo.variant(resize_to_limit: [32, 32]), class: 'image is-32x32' %>
    </div>
  <% end %>
  <%= link_to({ controller: 'productions', product_id: model.id }, text: true, class: 'media-content') do %>
    <%= yield %>
  <% end %>
  <div class="media-right">
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <%= svg_tag 'ellipsis-vertical' %>
    <% end %>
  </div>
</div>
