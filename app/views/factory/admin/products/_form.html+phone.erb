<%= f.text_field :name, required: true, autofocus: true %>
<%= f.collection_select :brand_id, @brands, :id, :name, include_blank: true if @brands.present? %>
<%= f.file_field :logo %>
<%= f.fields :productions, all: { normal: nil, checkbox: nil }, wrap: { input: 'field > control' }, before_wrap: { checkbox: nil } do |ef| %>
  <%= render partial: 'item_form', locals: { ef: ef } %>
<% end %>
