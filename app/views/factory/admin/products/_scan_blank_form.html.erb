<%= form_with theme: 'modal', model: @product, scope: :product, url: { action: 'manual' } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render 'error_messages', target: f.object %>
    <%= render partial: 'com/attachments/list_edit', locals: { target: f.object.manual, f: f } %>
  </section>
  <%= f.submit %>
<% end %>
