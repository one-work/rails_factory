<div class="field is-horizontal" data-controller="field" data-field-index-value="<%= ef.index %>">
  <% if ef.index == 0 %>
    <%= ef.label :productions %>
  <% else %>
    <label class="field-label"></label>
  <% end %>
  <div class="field-body">
    <%= ef.text_field :name %>
    <%= ef.number_field :cost_price %>
    <%= ef.number_field :price %>
    <%= ef.check_box :enabled, label: '上架' %>
    <span class="field has-addons has-addons-middle">
      <%= svg_tag 'plus', data: { action: 'click->field#add' }, class: 'icon clickable' %>
      <%= svg_tag 'minus', data: { action: 'click->field#remove' }, class: 'icon clickable ml-2' %>
    </span>
  </div>
</div>
