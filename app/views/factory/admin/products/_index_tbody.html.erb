<td>
  <div class="is-several">
    <%= image_tag model.logo.variant(resize_to_limit: [24, 24]), class: 'image is-24x24' if model.logo.attached? %>
  </div>
  <% if model.brand %>
    <p><span class="tag is-danger"><%= model.brand.name %></span></p>
  <% end %>
</td>
<td>
<% model.productions[0..2].each do |production| %>
  <p><%= production.title %></p>
<% end %>
<% if model.productions.size > 2 %>
  <%= link_to({ controller: 'productions', product_id: model.id }, text: true, class: 'display-block mt-2') do %>
    <span class="text-grey">更多</span>
  <% end %>
<% end %>
</td>
<td>
<% model.productions[0..2].each do |production| %>
  <p><%= production.stock %></p>
<% end %>
</td>
<td>
<% model.productions[0..2].each do |production| %>
  <p><%= production.price.to_money.format.html_safe %></p>
<% end %>
</td>
<td>
  <% model.all_components.each do |component| %>
    <p>
      <span><%= component.name %></span>
      <span class="text-grey size-7"><%= component.select_str %></span>
    </p>
  <% end %>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'show', id: model.id, taxon_id: model.taxon_id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-circle-info text-info"></i>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id, taxon_id: model.taxon_id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil text-link"></i>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, disabled: model.productions_count > 0, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-trash text-danger"></i>
    <% end %>
  </div>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'edit_image', id: model.id, taxon_id: model.taxon_id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil text-link"></i>
      <span class="ml-1"><%= t('.edit_image.title') %></span>
    <% end %>
    <%= link_to({ controller: 'product_components', product_id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-tree"></i>
      <span class="ml-1"><%= t('.product_components.index.title') %></span>
    <% end %>
    <%= link_to({ controller: 'fits', product_id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <span><%= model.fits_count %></span>
      <span class="ml-1"><%= t('.fits.index.title') %></span>
    <% end %>
    <%= link_to({ controller: 'productions', product_id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <span><%= model.productions_count %></span>
      <span class="ml-1"><%= t('.productions.index.title') %></span>
    <% end %>
  </div>
</td>