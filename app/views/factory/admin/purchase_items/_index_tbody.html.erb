<td><%= check_box_tag 'xx', model.id, false, id: nil %></td>
<td><%= model.number.to_human %></td>
<td><%= model.amount.to_money.format.html_safe %></td>
<td><%= model.note %></td>
<td><%= model.purchase_status_i18n %></td>
<td>
  <p><%= model.member&.name %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'update', id: model.id }, method: :patch, params: { item: { purchase_status: 'received' } }, aria: { label: t('.update.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-tractor text-success"></i>
    <% end if ['init', nil].include?(model.purchase_status) %>
    <%= button_to({ action: 'update', id: model.id }, method: :patch, params: { item: { purchase_status: 'init' } }, aria: { label: t('.update.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-tractor text-danger"></i>
    <% end if ['received'].include?(model.purchase_status) %>
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'circle-info', class: 'icon text-info' %>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
  </div>
</td>