<%=
  tr_tag(
    model,
    {
      href: url_for(controller: 'production_plans', production_id: model.id),
      icon: 'list',
      title: t('.production_plans.index.title')
    },
    {
      href: url_for(controller: 'production_items', production_id: model.id),
      icon: 'list',
      title: t('.production_items.index.title')
    },
    {
      href: url_for(controller: 'trade_items', production_id: model.id),
      icon: 'cart-shopping',
      title: t('.trade_items.index.title')
    },
    {
      href: url_for(controller: 'addresses', production_id: model.id),
      icon: 'location-dot',
      title: t('.addresses.index.title')
    },
    icons: ['show', 'edit']
  ) { yield }
%>
