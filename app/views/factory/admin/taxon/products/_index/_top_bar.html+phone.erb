<div class="box as-bar">
  <%= link_to({ controller: 'taxons' }, class: 'px-4') do %>
    <%= svg_tag 'angle-left', kind: 'regular' %>
  <% end %>
  <div class="weui-title">
    <span><%= @taxon.name %></span>
    <% if @taxon.scene %>
      <span class="tag ml-1"><%= @taxon.scene.title %></span>
    <% end %>
  </div>
  <i class="px-5"></i>
</div>
