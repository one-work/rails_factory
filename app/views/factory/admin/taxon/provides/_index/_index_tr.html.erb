<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide" class="background-success-light">
  <%= yield %>
  <td>
    <div data-show-target="item" class="has-inline-centered visibility-hidden">
      <%= button_to({ controller: 'taxon_provides', action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'eye', class: 'icon text-info' %>
      <% end %>
      <%= button_to({ controller: 'taxon_provides', action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil', class: 'icon text-link' %>
      <% end %>
      <%= button_to({ controller: 'taxon_provides', action: 'destroy', id: model.id }, method: :delete, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <%= svg_tag 'trash', class: 'icon text-danger' %>
        <span class="ml-1"><%= t('.destroy.title') %></span>
      <% end %>
    </div>
  </td>
</tr>