<td>
  <p><%= model.scene&.title %></p>
  <p><%= link_to model.produce_on, { action: 'show', id: model.id } %></p>
</td>
<td>
  <p><time data-controller="time"><%= model.start_at&.to_fs(:iso8601) %></time></p>
  <p><time data-controller="time"><%= model.finish_at&.to_fs(:iso8601) %></time></p>
</td>
<td><%= model.state_i18n %></td>
<td>
  <p><%= model.planned_count %></p>
  <p><%= link_to model.production_items_count, { controller: 'production_plan_items', production_plan_id: model.id } %></p>
</td>
<td>
  <p><%= model.station&.name %></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-circle-info text-info"></i>
    <% end %>
    <%= link_to({ controller: 'productions', product_plan_id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-cube"></i>
    <% end if false %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil text-link"></i>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <i class="fa-solid fa-trash text-danger"></i>
    <% end %>
  </div>
</td>