<td><%= model.provide.name %></td>
<td>
<% if model.provide.provider %>
  <%= model.provide.provider.name %>
<% end %>
</td>
<td>
  <%= form_with theme: nil, model: model, url: { controller: 'product_provides', action: 'refresh', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :default, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td>
  <div data-show-target="item" class="has-inline-centered visibility-hidden">
    <%= button_to({ controller: 'product_provides', action: 'show', taxon_id: model.product.taxon_id, id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'circle-info', class: 'icon text-info' %>
    <% end %>
    <%= button_to({ controller: 'product_provides', action: 'edit', taxon_id: model.product.taxon_id, id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
    <%= button_to({ controller: 'product_provides', action: 'destroy', taxon_id: model.product.taxon_id, id: model.id }, method: :delete, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
      <span class="ml-1"><%= t('.destroy.title') %></span>
    <% end %>
  </div>
</td>