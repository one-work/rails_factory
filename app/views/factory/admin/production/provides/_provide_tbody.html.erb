<td><%= model.name %></td>
<td>
<% if model.provider %>
  <div class="is-several">
    <%= image_tag model.provider.logo, class: 'image is-24x24' if model.provider.logo.attached? %>
    <span><%= model.provider.name %></span>
  </div>
<% else %>
  <%= button_to({ action: 'invite', id: model.id }, class: 'button is-small is-borderless') do %>
    <i class="fa-solid fa-user-plus text-primary"></i>
    <span class="ml-1"><%= t('.invite.title') %></span>
  <% end %>
<% end %>
</td>
<td colspan="3"></td>
<td><time data-controller="time" class="text-grey"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td>
  <div data-show-target="item" class="has-inline-centered visibility-hidden">
    <%= button_to({ action: 'show', id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'eye', class: 'icon text-info' %>
      <span class="ml-1"><%= t('.show.title') %></span>
    <% end %>
    <%= button_to({ controller: 'production_provides', action: 'create' }, params: { production_provide: { provide_id: model.id } }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-cart-flatbed text-success"></i>
      <span class="ml-1"><%= t('.production_provides.create.title') %></span>
    <% end %>
  </div>
</td>