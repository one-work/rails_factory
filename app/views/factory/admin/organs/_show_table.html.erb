<div>
  <dt><%= Org::Organ.human_attribute_name(:name) %></dt>
  <dd>
    <%= text_field_tag 'organ[name]', @organ.name, class: 'input', form: 'show-form', data: { single_input_target: 'input' } %>
  </dd>
</div>
<div>
  <dt><%= Org::Organ.human_attribute_name(:share_logo) %></dt>
  <dd class="has-select">
    <% if @organ.share_logo.attached? %>
      <%= button_to({ action: 'inline' }, params: { field: 'share_logo', field_type: 'inline_form/file_field', partial: 'edit_inline_submit' }) do %>
        <%= image_tag @organ.share_logo, class: 'image is-64x64' %>
      <% end %>
    <% else %>
      <%= button_to({ action: 'inline' }, params: { field: 'share_logo', field_type: 'inline_form/file_field', partial: 'edit_inline_submit' }) do %>
        <span>上传门店图</span>
      <% end %>
    <% end %>
  </dd>
</div>
<div>
  <dt><%= Org::Organ.human_attribute_name(:dispatches) %></dt>
  <dd>
    <div class="tags justify-content-flex-end">
      <% @organ.dispatches.each do |dispatch| %>
        <span class="tag"><%= Trade::Item.enum_i18n(:dispatch, dispatch) %></span>
      <% end %>
      <%= button_to({ action: 'inline' }, params: { field: 'dispatches', field_type: 'checkboxes_dispatches_field', partial: 'edit_inline_submit' }, class: 'tag is-primary') do %>
        <%= svg_tag 'chevron-right' %>
      <% end %>
    </div>
  </dd>
</div>
<div>
  <dt><%= Org::Organ.human_attribute_name(:dispatch) %></dt>
  <dd class="has-select">
    <%= button_to({ action: 'inline' }, params: { field: 'dispatch', field_type: 'inline_form/select_enum' }) do %>
      <span><%= @organ.dispatch_i18n %></span>
    <% end %>
  </dd>
</div>
