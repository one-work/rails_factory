<% if role_permit?(business: 'factory', namespace: 'admin') %>
<div class="box is-padding-less">
  <div class="box-header">
    <div>
      <span class="size-7 has-border-left-primary"><%= t('factory.admin.title') %></span>
    </div>
    <%= link_to({ controller: '/factory/productions' }, class: 'size-7') do %>
      <%= svg_tag 'up-right-and-down-left-from-center' %>
      <span class="ml-1">预览商店</span>
    <% end %>
  </div>
  <div class="columns is-4-mobile flex is-vcentered is-centered m-0">
    <%= link_to({ controller: 'factory/admin/products' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'folder-tree', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('factory.admin.products.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'factory/admin/scenes' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'lightbulb', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('factory.admin.scenes.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'factory/admin/brands' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'copyright', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('factory.admin.brands.index.title') %></div>
    <% end %>
  </div>
</div>
<% end %>