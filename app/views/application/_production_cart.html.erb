<div id="product_cart_<%= model.product_id %>" class="level right-badge">
<% if model.product.productions_count > 1 || model.product.product_parts_count > 0 || model.taxon&.taxon_components_count.to_i > 0 %>
  <% items = cart&.find_items(model.product.production_ids, **params.permit(:dispatch, :produce_on, :scene_id)) %>
  <%= button_to({ controller: ['factory', params.fetch(:namespace, ''), 'productions'].compact_blank.join('/'), action: 'show', id: model.id }, params: params.permit(:dispatch, :desk_id, :station_id).compact_blank, class: 'button is-small is-rounded is-primary') do %>
    <span>选规格</span>
  <% end %>
  <% if items.present? %>
    <span class="weui-badge"><%= items.size %></span>
  <% end %>
<% else %>
  <% if cart %>
    <%= render partial: 'cart_item', locals: { item: cart.init_cart_item(params, good_id: model.id), cart: cart, item_con: item_con } %>
  <% end %>
<% end %>
</div>
